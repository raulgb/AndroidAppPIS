<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="180dp"
              android:layout_height="fill_parent"
              android:backgroundTintMode="src_atop"
              android:background="@drawable/frame_retro_mk1"
              android:id="@+id/outerFrame">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="@dimen/minimap_size"
            android:layout_height="@dimen/minimap_size"
            android:id="@+id/minimapFrame"
            android:background="@drawable/frame_minimap_mk1"
            android:orientation="vertical"
            android:layout_margin="8dp">

            <Button
                android:layout_width="@dimen/minimap_size"
                android:layout_height="@dimen/minimap_size"
                android:text=""
                android:id="@+id/btnMinimap"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/btn_retro_mk1"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/sidebar_horizontal_margin"
            android:layout_gravity="center_vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/scrap_white_64"
                    android:id="@+id/scrap_icon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textScrap"
                    android:text="@string/res1_defVal"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#EEE"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/fuel_white_64"
                    android:id="@+id/fuel_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textFuel"
                    android:text="@string/res2_defVal"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#EEE"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_gravity="center_horizontal"
        android:layout_margin="3dp">

        <Button
            style="?android:attr/borderlessButtonStyle"

            android:layout_width="@dimen/grid_btn_size"
            android:layout_height="@dimen/grid_btn_size"
            android:text=""
            android:id="@+id/btnT1"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_rowWeight="0.3"
            android:background="@drawable/btn_retro_mk1"
            android:layout_margin="2dp"
            android:paddingLeft="4dp"
            android:paddingTop="12dp"/>

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/grid_btn_size"
            android:layout_height="@dimen/grid_btn_size"
            android:text=""
            android:id="@+id/btnT2"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_rowWeight="0.3"
            android:background="@drawable/btn_retro_canv_mk1"
            android:layout_margin="2dp"
            android:paddingLeft="4dp"
            android:paddingTop="12dp"/>

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/grid_btn_size"
            android:layout_height="@dimen/grid_btn_size"
            android:text=""
            android:id="@+id/btnT3"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_rowWeight="0.3"
            android:background="@drawable/btn_retro_canv_mk1"
            android:layout_margin="2dp"
            android:paddingLeft="4dp"
            android:paddingTop="12dp"/>

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/grid_btn_size"
            android:layout_height="@dimen/grid_btn_size"
            android:text=""
            android:id="@+id/btnT4"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/btn_retro_canv_mk1"
            android:layout_margin="2dp"
            android:layout_marginTop="3dp"
            android:paddingLeft="4dp"
            android:paddingTop="12dp"/>

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/grid_btn_size"
            android:layout_height="@dimen/grid_btn_size"
            android:text=""
            android:id="@+id/btnT5"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/btn_retro_canv_mk1"
            android:layout_margin="2dp"
            android:layout_marginTop="3dp"
            android:paddingTop="12dp"
            android:paddingLeft="4dp"/>

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/grid_btn_size"
            android:layout_height="@dimen/grid_btn_size"
            android:text=""
            android:id="@+id/btnT6"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@drawable/btn_retro_canv_mk1"
            android:layout_margin="2dp"
            android:layout_marginTop="3dp"
            android:paddingLeft="4dp"
            android:paddingTop="12dp"/>
    </GridLayout>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="1"
        android:layout_gravity="center_horizontal"
        android:layout_margin="3dp">

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/grid_btn_size"
            android:layout_height="@dimen/grid_btn_size"
            android:text=""
            android:id="@+id/btnU1"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_rowWeight="0.3"
            android:background="@drawable/btn_retro_upgrade_canv_mk1"
            android:layout_margin="2dp"
            android:paddingLeft="4dp"
            android:paddingTop="12dp"/>

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/grid_btn_size"
            android:layout_height="@dimen/grid_btn_size"
            android:text=""
            android:id="@+id/btnU2"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_rowWeight="0.3"
            android:background="@drawable/btn_retro_upgrade_canv_mk1"
            android:layout_margin="2dp"
            android:paddingLeft="4dp"
            android:paddingTop="12dp"/>

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/grid_btn_size"
            android:layout_height="@dimen/grid_btn_size"
            android:text=""
            android:id="@+id/btnU3"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_rowWeight="0.3"
            android:background="@drawable/btn_retro_upgrade_canv_mk1"
            android:layout_margin="2dp"
            android:paddingLeft="4dp"
            android:paddingTop="12dp"/>

    </GridLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/inventory_button"
        android:id="@+id/btnInventory"
        android:background="@drawable/btn_retro_canv_mk1"
        android:layout_margin="5dp"
        android:textColor="#EEE"
        />
</LinearLayout>